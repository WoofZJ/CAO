<nav class="flex flex-col items-center py-2 px-4 rounded-lg gap-2">
    <span class="text-sm">本站由以下技术强力驱动：</span>
    <ul class="flex flex-row gap-4 items-center flex-wrap justify-center">
        @foreach (var item in poweredByList)
        {
            <li>
                <a class="flex flex-row items-center bg-base-300 rounded-xl px-3 py-2 gap-1.5 hover:text-error"
                    href="@item.Url">
                    <img class="h-6" src="@item.Logo" />
                    <span class="font-bold text-base">
                        @item.Name
                    </span>
                </a>
            </li>
        }
    </ul>
</nav>

@code {
    record PoweredByItem(string Name, string Url, string Logo);

    PoweredByItem[] poweredByList =
    [
        new ("tailwindcss", "https://tailwindcss.com", "/images/logos/tailwindcss.svg"),
        new ("daisyUI", "https://daisyui.com", "images/logos/daisyUI.svg"),
        new ("Blazor", "https://dotnet.microsoft.com/en-us/apps/aspnet/web-apps/blazor", "/images/logos/Blazor.png"),
        new ("Cloudflare Workers®", "https://workers.cloudflare.com", "/images/logos/CloudflareWorkers.svg"),
    ];
}